<!DOCTYPE html>
<html>
<head>
  <title>Escomboapp</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= stylesheet_link_tag    'backoffice', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'backoffice' %>

</head>


<body>
  <%= render partial: "layouts/backoffice_shared/navigation" %>
  <div id="wrapper">
    <!-- Page Content -->
    <div id="page-wrapper">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12">
            <%= yield %>
          </div>
          <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->
  </div>

  <% if notice %>
    <script>
      $.notify("<%= notice %>", "success");
    </script>
  <% end %>
  <% if alert %>
  <script>
      $.notify("<%= alert %>", "error");
  </script>
<% end %>
</body>
</html>