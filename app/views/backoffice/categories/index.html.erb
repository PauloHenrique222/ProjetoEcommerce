<h1 class="page-header">List Category</h1>

<div class="panel panel-default">
  <div class="panel-heading">
    <%= link_to "New Category", new_backoffice_category_path, class: "btn btn-success pull-right" %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
          <th>ID</th>
          <th>Description</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.id %></td>
            <td><%= category.description %></td>
            <td>
              <%= link_to edit_backoffice_category_path(category), class: "btn btn-primary btn-circle" do %>
                <i class="fa fa-edit"></i>
              <% end %>
            </td>
            <td>
              <%= link_to backoffice_category_path(category), class: "btn btn-danger btn-circle" do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <!-- /.table-responsive -->
  </div>
  <!-- /.panel-body -->
</div>

