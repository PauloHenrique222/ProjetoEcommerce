<% if @admin.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <% @admin.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  </div>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <br>
  </div>
  <div class="panel-body">
    <%= form_for([:backoffice, @admin]) do |form|%>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class:"form-control", placeholder: "Name"%>
      </div>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email, class:"form-control", placeholder: "Email"%>
      </div>
      <% if policy(@admin).edit? %>
        <div class="form-group">
          <%= form.label :access %>
          <%= form.collection_radio_buttons(:role, options_for_roles, :id, :description) do |b| %>
            <div class="radio">
              <%= b.label {b.radio_button + b.text} %>
            </div>
          <% end %>
        </div>
      <% end %>
      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, class:"form-control", placeholder: "Password"%>
      </div>
      <div class="form-group">
        <%= form.label :password_field %>
        <%= form.password_field :password_confirmation, class:"form-control", placeholder: "Password_confirmation"%>
      </div>
      <%= form.submit class: "btn btn-success" %>
    <% end %>
  </div>
</div>