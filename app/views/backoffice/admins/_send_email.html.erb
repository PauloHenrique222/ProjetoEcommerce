<div class="modal fade" id="sendEmailModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <%= button_tag(type: 'button', class: 'close', data: {dismiss: 'modal'}, aria:{label: 'close'})  do%>
          <span aria-hidden="true">&times;</span>
        <% end %>
      </div>
      <h4 class="modal-title text-center" id="exampleModalLabel">New message</h4>
      <%= form_tag(backoffice_send_mail_index_path, remote: true) do %>
        <div class="modal-body">
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Recipient:</label>
            <%= text_field_tag 'recipient-name',nil, readonly: true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Subject:</label>
            <%= text_field_tag 'subject-text',nil, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Message:</label>
            <%= text_area_tag 'message-text',nil, class: 'form-control' %>
          </div>
        </div>
        <div class="modal-footer">
          <%= button_tag 'Close', type: 'button', class: 'btn btn-secondary', data: {dismiss: 'modal'}%>
          <%= button_tag 'Send message', class: 'btn btn-primary'%>
        </div>
      <% end %>
    </div>
  </div>
</div>