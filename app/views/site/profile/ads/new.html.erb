<div class="container" style="min-height: 80vh">
  <div class="row">
    <%= render partial: "site/profile/menu_profile" %>
    <div class="col-lg-9" style="margin-top: 30px">
      <h1 class="text-center" style="margin-bottom: 20px">New Announcement</h1>
      <% if @ad.errors.any? %>
        <div class="alert alert-danger alert-dismissable" style="margin-top: 30px">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
          <% @ad.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </div>
      <% end %>
      <%= form_for(@ad, url: site_profile_ads_path) do |form|%>
        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title, class:"form-control", placeholder: "Title"%>
        </div>
        <div class="form-group">
          <%= form.label :value %>
          <%= form.text_field :price, class:"form-control", placeholder: "Value"%>
        </div>
        <div class="form-group">
          <%= form.label :category %>
          <%= form.collection_select(:category_id, Category.all, :id, :description, {}, class: "form-control") %>
        </div>
        <div class="form-group">
          <%= form.label :finish_date %>
          <%= form.date_field :finish_date, class:"form-control"%>
        </div>
        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class:"form-control", rows: 10%>
        </div>
        <div class="form-group">
          <%= form.label :image %>
          <%= form.file_field :image %>
        </div>
        <%= form.submit class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
  <br>
</div>