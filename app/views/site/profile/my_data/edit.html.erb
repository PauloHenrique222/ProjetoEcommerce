<!-- Page Content -->
<div class="container" style="min-height: 80vh">
  <div class="row">
    <%= render partial: "site/profile/menu_profile" %>
    <div class="col-lg-9" style="margin-top: 30px">
      <h1 class="text-center" style="margin-bottom: 20px">My Data</h1>
      <% if @profile_member.errors.any? %>
        <div class="alert alert-danger alert-dismissable" style="margin-top: 30px">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
          <% @profile_member.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </div>
      <% end %>
      <%= form_for(@profile_member, url: site_profile_my_datum_path) do |form|%>
        <div class="form-group">
          <%= form.label :first_name %>
          <%= form.text_field :first_name, class:"form-control", placeholder: "First name"%>
        </div>
        <div class="form-group">
          <%= form.label :second_name %>
          <%= form.text_field :second_name, class:"form-control", placeholder: "Second name"%>
        </div>
        <div class="form-group">
          <%= form.label :birthdate %>
          <%= form.date_field :birthdate, class:"form-control" %>
        </div>
        <%= form.submit class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>