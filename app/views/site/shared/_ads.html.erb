<% @ads.each do |ad| %>
  <div class="col-lg-4 col-md-6 mb-4">
    <div class="card h-100">
      <%= image_tag ad.image_url(:thumb).to_s, size: "300x200", class:"card-img-top" %>
      <div class="card-body">
        <h4 class="card-title">
          <%= link_to ad.title, site_ad_datail_path(ad)%>
        </h4>
        <h5><%= humanized_money_with_symbol ad.price %></h5>
        <p class="card-text"><%= ad.description %></p>
      </div>
      <div class="card-footer">
        <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
      </div>
    </div>
  </div>
<% end %>